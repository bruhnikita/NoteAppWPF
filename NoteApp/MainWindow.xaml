<Window x:Class="NoteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note Application" Height="350" Width="525">
    <Grid>
        <!-- Текстовое поле для заметок -->
        <TextBox x:Name="NoteTextBox" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" AcceptsReturn="True" />

        <!-- Кнопка для экспорта в PDF -->
        <Button Content="Экспорт в PDF" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Width="120" Click="ExportToPDF_Click"/>

        <!-- Лейбл для отображения статуса -->
        <Label x:Name="StatusLabel" Content="" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Width="480" Height="30"/>
    </Grid>
</Window>
